# build the gateway binary
FROM golang:1.10.0-alpine as builder
LABEL intermediate=true
WORKDIR /go/src/github.com/infobloxopen/atlas-contacts-app
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o bin/auths ./auths/

# build the gateway binary
FROM alpine:latest as runner
WORKDIR /bin
COPY --from=0 /go/src/github.com/infobloxopen/atlas-contacts-app/bin/auths .
ENTRYPOINT ["auths"]
